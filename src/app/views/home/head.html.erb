<h1>Body Part: Head</h1>

<div class = "text-right">
    <%= image_tag "head3.png", :style => "float: left; margin: 100px 100px 100px", height: 720 %>
<br><br>
     <%= form_with model: @symptom, method: :get do |form| %> 
    <%= form.select :sym_desc, options_for_select(@symptoms.collect{|u| [u.sym_desc]})%>
    <%= form.submit "Search" %>
  <% end %>
  <%= link_to "Reset", home_head_path, :style => "float: right; margin: 0px 0px 10px", class:"btn btn-secondary btn-lg btn-block"%>
  <p>
  <strong><font size = "5">Solution:
  <strong>
    <%= @chosen_symptom %>
  </strong>
  </p>
   <p>
  Severity Level:
  <strong>
    <%= @severity %>
  </strong>
  </p>
  
   
</div>
